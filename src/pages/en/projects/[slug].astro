---
import ProjectLayout from '../../../layouts/ProjectLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('projects', (e) => e.data.lang === 'en' && (e.data.published ?? true));
  return entries
    .filter((e) => !!e.data.slug)
    .map((entry) => ({
      params: { slug: entry.data.slug! },
      props: { entry },
    }));
}

const { entry } = Astro.props;
const { data } = entry;
const { Content } = await render(entry);

const metaTitle = data.seoTitle ?? data.title;
const metaDesc = data.seoDescription ?? data.excerpt ?? data.title;
---
<ProjectLayout
  title={data.title}
  metaTitle={metaTitle}
  metaDesc={metaDesc}
  lang="en"
  class="prose"
  heroImage={data.heroImage}
  technologies={data.stack}
  githubUrl={data.repoUrl}
  liveUrl={data.demoUrl}
>
  <Content />
</ProjectLayout>
