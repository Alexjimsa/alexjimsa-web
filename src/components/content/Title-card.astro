---
import { ui, type Locale } from "../../i18n/ui";
import RotatingText from "../../components/islands/RotatingText";

const locale = (Astro.currentLocale ?? "es") as Locale;
const t = ui[locale];
const roles = t.hero.roles;

// ancho en "ch" del string mÃ¡s largo
const maxLen = Math.max(...roles.map(r => r.length));
---
<div class="hero">
  <h1>{t.hero.hey}</h1>
  <p style={`display:inline-block; min-width:${maxLen}ch`}>
    <RotatingText client:idle items={roles} />
  </p>
</div>

<style>
  .hero {
    --fs-h1: clamp(2.5rem, 5vw, 4rem);
    --fs-h2: calc(var(--fs-h1) * 0.8);
    display: flex;
    flex-direction: column;
    width: fit-content;
    margin: auto;
  }
  p {
    font-size: var(--fs-h2);
    font-family: var(--font-titles);
    font-weight: var(--fw-bold);
    color: var(--color-primary);
    display: inline-flex;
    gap: .4ch;
  }
  /* Ocultamos el fallback cuando hydrate */
  .no-js { display: none; }
  :global(noscript) .no-js { display: inline; } /* por si usas <noscript> */

  .rotating-text {
    display: inline-block;
    transition: opacity 0.3s ease;
  }
  .fade-in { opacity: 1; }
  .fade-out { opacity: 0; }

</style>
