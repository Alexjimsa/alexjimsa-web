---
import { ui, type Locale } from "../../i18n/ui";
import RotatingText from "../../components/islands/RotatingText";

const locale = (Astro.currentLocale ?? "es") as Locale;
const t = ui[locale];

const headline = t.hero.hey;
const roles = t.hero.roles;
---
<div class="hero">
  <h1>{headline}</h1>
  <p>
    <!-- Fallback sin JS: primer rol -->
    <span class="no-js">{roles[0]}</span>
    <!-- Isla que rota cuando hay JS -->
    <RotatingText client:idle items={roles} />
  </p>
</div>

<style>
  .hero {
    --fs-h1: clamp(2.5rem, 5vw, 4rem);
    --fs-h2: calc(var(--fs-h1) * 0.8);
    display: flex;
    flex-direction: column;
    width: fit-content;
    margin: auto;
  }
  p {
    font-size: var(--fs-h2);
    font-family: var(--font-titles);
    font-weight: var(--fw-bold);
    color: var(--color-primary);
    display: inline-flex;
    gap: .4ch;
  }
  /* Ocultamos el fallback cuando hydrate */
  .no-js { display: none; }
  :global(noscript) .no-js { display: inline; } /* por si usas <noscript> */
</style>
