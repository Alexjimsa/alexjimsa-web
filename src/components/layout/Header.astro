---
import Logo from '../ui/Logo.astro';
import HeaderActions from '../ui/HeaderActions.astro';

const { pathname } = Astro.url;
const isEN = pathname.startsWith('/en');
const base = isEN ? '/en' : '';

const isActive = (href: string): boolean => {
  return (
    pathname === href ||
    pathname.startsWith(`${href}/`) ||
    (href === (base || '/') && pathname === (base || '/'))
  );
};
---

<header role="banner">
  <div class="header-container">
    <a href="/" class="logo-link">
      <Logo />
    </a>

    <!-- Hidden checkbox to control the menu -->
    <input type="checkbox" id="menu-toggle" />

    <!-- Label that acts as a hamburger button -->
    <label for="menu-toggle" class="hamburger" aria-controls="site-nav" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </label>

    <nav class="site-nav" id="site-nav" aria-label="Main navigation">
      <HeaderActions variant="mobile" />
      <ul>
        <li>
          <a href={`${base}/about`}    aria-current={isActive(`${base}/about`)    ? 'page' : undefined}>About</a>
        </li>
        <li>
          <a href={`${base}/projects`} aria-current={isActive(`${base}/projects`) ? 'page' : undefined}>Projects</a>
        </li>
        <li>
          <a href={`${base}/blog`}     aria-current={isActive(`${base}/blog`)     ? 'page' : undefined}>Blog</a>
        </li>
      </ul>
    </nav>
    <HeaderActions variant="desktop" />
  </div>
</header>

<style>
  header {
    padding: 2rem;
    position: relative;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Hide checkbox */
  #menu-toggle {
    display: none;
  }

  /* Hamburger button - visible by default on mobile */
  .hamburger {
    display: flex;
    flex-direction: column;
    cursor: pointer;
    padding: 5px;
    z-index: 1001;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background-color: var(--color-text);
    margin: 3px 0;
    transition: 0.3s;
    transform-origin: center;
  }

  /* Hamburger button animation when checkbox is checked */
  #menu-toggle:checked + .hamburger span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  #menu-toggle:checked + .hamburger span:nth-child(2) {
    opacity: 0;
  }

  #menu-toggle:checked + .hamburger span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Navigation - Default mobile styles */
  .site-nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100vh;
    background-color: var(--color-surface);
    transition: right 0.3s ease;
    z-index: 1000;
  }

  /* Show navigation when checkbox is checked */
  #menu-toggle:checked ~ .site-nav {
    right: 0;
  }

  .site-nav ul {
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    list-style: none;
    gap: 3rem;
  }

  .site-nav ul li a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 1.2rem;
    padding: 1rem 2rem;
    transition: background-color 0.3s ease;
  }

  .site-nav ul li a:hover {
    color: var(--color-primary, #2AB01E);
  }

  /* Overlay */
  .site-nav::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s,
      visibility 0.3s;
    z-index: -1;
  }

  #menu-toggle:checked ~ .site-nav::before {
    opacity: 1;
    visibility: visible;
  }

  /* Prevent scroll when menu is open */
  #menu-toggle:checked ~ body,
  body:has(#menu-toggle:checked) {
    overflow: hidden;
  }

  /* Desktop styles */
  @media (min-width: 850px) {
    .header-container {
      display: grid;
      grid-template-columns: auto 1fr auto;
      align-items: center;
      column-gap: 1rem;
      position: relative;
    }

    .hamburger {
      display: none;
    }

    .site-nav {
      position: static;
      width: auto;
      height: auto;
      background-color: transparent;

      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
    }

    .site-nav ul {
      flex-direction: row;
      height: auto;
      gap: 2rem;
      margin: 0;
      padding: 0;
    }

    .site-nav ul li a {
      font-size: 1rem;
      padding: 0.5rem 1rem;
    }

    .site-nav::before {
      display: none;
    }
  }

  /* Add these new utility classes at the end of the stylesheet */
  .header-container img,
  .header-container svg { 
    display: block; 
  }
  
  .site-nav a { 
    display: inline-flex; 
    align-items: center; 
    line-height: 1;
  }
</style>

<script>
  const cb = document.getElementById('menu-toggle') as HTMLInputElement | null;
  const btn = document.querySelector('label.hamburger') as HTMLLabelElement | null;
  const nav = document.getElementById('site-nav') as HTMLElement | null;

  const sync = (): void => {
    const open = Boolean(cb?.checked);
    if (btn) btn.setAttribute('aria-expanded', open ? 'true' : 'false');
    if (nav)  nav.dataset.open = open ? 'true' : 'false';
  };

  cb?.addEventListener('change', sync);
  sync();
</script>
