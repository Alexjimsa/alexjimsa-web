---
const { label, href } = Astro.props;
---

<li class="tag-pill">
  # {href ? <a href={href}>{label}</a> : <span>{label}</span>}
</li>

<style>
  .tag-pill {
    font-size: var(--fs-small);

    padding: 6px 12px;
    border-radius: 999px;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
  }
  .tag-pill:hover,
  .tag-pill:focus {
    background-color: var(--color-surface_hover);
  }
</style>